{
  "name": "starter",
  "version": "1.0.0",
  "description": "Node Application Boilerplate",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon -e js,graphql --exec babel-node src/index.js",
    "prebuild": "rimraf dist/*",
    "build": "babel -d ./dist ./src --copy-files",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "knex": "node -r reify ./node_modules/.bin/knex",
    "db:migrate": "yarn knex migrate:latest",
    "db:seed": "yarn knex seed:run"
  },
  "author": "Robert Barnwell <robert@robertismy.name>",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-module-resolver": "^3.2.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "nodemon": "^1.19.1",
    "reify": "^0.20.12",
    "rimraf": "^2.6.3"
  },
  "dependencies": {
    "@sentry/node": "^5.6.1",
    "chalk": "^2.4.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.0.0",
    "ejs": "^2.6.2",
    "express": "^4.17.1",
    "global": "^4.4.0",
    "helmet": "^3.20.0",
    "knex": "^0.19.1",
    "pg": "^7.12.1",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
